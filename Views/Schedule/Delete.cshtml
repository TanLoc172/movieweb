@model Schedule
@{
    ViewData["Title"] = "Xác nhận xóa lịch chiếu";
    Layout = "_LayoutAdmin";
}

<div class="delete-confirmation-card">
    <h3>@ViewData["Title"]</h3>
    <p class="text-muted">Bạn có chắc chắn muốn xóa vĩnh viễn lịch chiếu này không? Hành động này không thể hoàn tác.</p>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-4">Phim</dt>
        <dd class="col-sm-8">@Model.Movie.Title</dd>

        <dt class="col-sm-4">Thời gian chiếu</dt>
        <dd class="col-sm-8">@Model.ScheduledTime.ToString("HH:mm - dd/MM/yyyy")</dd>

        <dt class="col-sm-4">Mô tả</dt>
        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "Không có" : Model.Description)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn btn-delete-confirm">
                <i class="bi bi-trash"></i> Xóa vĩnh viễn
            </button>
             <a asp-action="AdminIndex" class="btn btn-back">
                <i class="bi bi-x-circle"></i> Hủy bỏ
            </a>
        </div>
    </form>
</div>
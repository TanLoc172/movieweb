@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .login-container {
            background: rgba(20, 20, 20, 0.95);
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
            max-width: 1450px;
            width: 150%;
            animation: fadeIn 1s ease-in-out;
            box-align: center;
        }

        .login-container h1 {
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 1.5rem;
            color: #ffcc00;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .form-group label {
            font-weight: bold;
            color: #ddd;
            transition: color 0.3s;
        }

        .form-control {
            background: #333;
            border: none;
            color: #fff;
            padding: 0.75rem;
            border-radius: 8px;
            transition: background 0.3s, transform 0.2s;
        }

        .form-control:focus {
            background: #444;
            transform: scale(1.02);
            box-shadow: 0 0 10px rgba(255, 204, 0, 0.3);
            color: #fff;
        }

        .form-check-label {
            color: #ddd;
        }

        .btn-primary {
            background: #ffcc00;
            border: none;
            color: #000;
            font-weight: bold;
            padding: 0.75rem;
            width: 100%;
            border-radius: 8px;
            transition: background 0.3s, transform 0.2s;
        }

        .btn-primary:hover {
            background: #e6b800;
            transform: translateY(-2px);
        }

        .register-link {
            color: #ffcc00;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

        .register-link:hover {
            color: #e6b800;
            text-decoration: underline;
        }

        .text-danger {
            font-size: 0.9rem;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@media (max-width: 576px) {
            .login-container {
                margin: 1rem;
                padding: 1.5rem;
            }

            .login-container h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>@ViewData["Title"]</h1>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Ghi nhớ tôi</label>
            </div>

            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>

        <div class="text-center mt-3">
            <p>Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="register-link">Đăng ký ngay!</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>